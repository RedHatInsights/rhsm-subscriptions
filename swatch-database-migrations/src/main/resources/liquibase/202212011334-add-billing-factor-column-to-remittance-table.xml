<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="202212011334-1" author="ksynvrit">
        <!-- 
          Only add billing_factor column if it doesn't exist. If swatch-billable-usage starts first,
          the consolidated script already includes this column.
        -->
        <preConditions onFail="MARK_RAN">
          <not>
            <columnExists tableName="billable_usage_remittance" columnName="billing_factor"/>
          </not>
        </preConditions>
        <comment>Add Billing Factor to billable_usage_remittance table</comment>
        <addColumn tableName="billable_usage_remittance">
            <column name="billing_factor" type="double precision" defaultValueNumeric="1.0"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
