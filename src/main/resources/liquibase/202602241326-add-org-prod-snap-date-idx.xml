<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
  <changeSet id="202602241326-01" author="wpoteat">
    <preConditions onFail="MARK_RAN">
      <not>
        <indexExists tableName="tally_snapshots" indexName="tally_snapshots_quad_idx"/>
      </not>
    </preConditions>
    <comment>
      Add index improve common lookup.
      This should only run in developer setups.
      Add index to tally snapshots to improve current lookups.
    </comment>
    <sql dbms="postgresql">
      CREATE INDEX tally_snapshots_quad_idx ON tally_snapshots (
         org_id,
         product_id,
         snapshot_date,
         granularity);
    </sql>
    <rollback>
      <dropIndex indexName="tally_snapshots_quad_idx" tableName="tally_snapshots"/>
    </rollback>
  </changeSet>
</databaseChangeLog>
