<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
  <changeSet id="202504291554-01" author="jcarvaja">
    <!-- 
      Only add updated_at column if it doesn't exist. If swatch-billable-usage starts first,
      the consolidated script already includes this column.
    -->
    <preConditions onFail="MARK_RAN">
      <not>
        <columnExists tableName="billable_usage_remittance" columnName="updated_at"/>
      </not>
    </preConditions>
    <comment>Add updated_at column to the billable_usage_remittance table.</comment>
    <addColumn tableName="billable_usage_remittance">
      <column name="updated_at" type="timestamp"/>
    </addColumn>
  </changeSet>
</databaseChangeLog>
