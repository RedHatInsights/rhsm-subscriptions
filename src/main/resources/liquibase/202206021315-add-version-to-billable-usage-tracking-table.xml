<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="202206021315" author="khowell">
    <!-- 
      Only add version column if it doesn't exist. If swatch-billable-usage starts first,
      the consolidated script already includes this column.
    -->
    <preConditions onFail="MARK_RAN">
      <not>
        <columnExists tableName="billable_usage_remittance" columnName="version"/>
      </not>
    </preConditions>
    <comment>Add version column to billable_usage_remittance tracking table for optimistic locking</comment>

    <addColumn tableName="billable_usage_remittance">
      <column name="version" type="INT"/>
    </addColumn>

  </changeSet>
</databaseChangeLog>
