<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <property name="json_type" dbms="hsqldb" value="clob"/>
  <property name="json_type" dbms="postgresql" value="jsonb"/>

  <changeSet author="lburnett" id="202411041305">
    <createTable tableName="hypervisor_relationship_cache">
      <column name="last_updated" type="TIMESTAMP WITH TIME ZONE">
        <constraints nullable="false"/>
      </column>
      <column name="subscription_manager_id" type="VARCHAR">
        <constraints nullable="false"/>
      </column>
      <column name="hypervisor_uuid" type="VARCHAR">
        <constraints nullable="true"/>
      </column>
      <column name="org_id" type="VARCHAR">
        <constraints nullable="false"/>
      </column>
      <column name="hbi_facts" type="${json_type}">
        <constraints nullable="false"/>
      </column>
      <column name="measurements" type="${json_type}">
        <constraints nullable="true"/>
      </column>
    </createTable>

    <addUniqueConstraint columnNames="subscription_manager_id, hypervisor_uuid"
      constraintName="hypervisors_logicalk" tableName="hypervisor_relationship_cache"/>

  </changeSet>

</databaseChangeLog>